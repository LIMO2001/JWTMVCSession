@{
    ViewData["Title"] = "Dashboard";
    var userName = User.Identity?.Name ?? "Guest";
}

<div class="container py-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-speedometer2 me-2"></i> Welcome, @userName!
        </h2>
        <form asp-action="Logout" asp-controller="Account" method="post" class="m-0">
            <button type="submit" class="btn btn-outline-danger">
                <i class="bi bi-box-arrow-right me-1"></i> Logout
            </button>
        </form>
    </div>

    <!-- Info Cards Section -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-person-circle text-primary" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Profile</h5>
                    <p class="text-muted small">Manage your account details and settings.</p>
                    <a href="#" class="btn btn-sm btn-primary">View Profile</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-gear-fill text-success" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Settings</h5>
                    <p class="text-muted small">Customize your dashboard preferences and layout.</p>
                    <a href="#" class="btn btn-sm btn-success">Go to Settings</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-shield-lock-fill text-warning" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Security</h5>
                    <p class="text-muted small">View your login history and manage security settings.</p>
                    <a href="#" class="btn btn-sm btn-warning text-white">Security Center</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats / Info Section -->
    <div class="row mt-5">
        <div class="col-lg-12">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-graph-up-arrow me-2 text-primary"></i>Activity Overview
                    </h5>
                    <p class="text-muted mb-4">
                        Here you can later add charts, summaries, or recent activity logs to make your dashboard more informative.
                    </p>
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle me-1"></i> Dashboard under development — more features coming soon!
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
